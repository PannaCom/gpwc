@model List<gpw.Models.quan_he_thanh_vien>

@if (Model != null)
{
    if (Model.Count > 0)
    {
        <div style="border: 1px solid #cbcbcb;padding: 10px;">
            <h3 style="font-size: 14px; margin-top: 0;">Danh sách thành viên cùng quan hệ: </h3>
            <ul style="list-style-type:none;">
                @foreach (var item in Model)
                {
                    <li style="display: inline-block;">
                        @if (item.thanh_vien_qh_id != null)
                        {
                            <a href="/ThanhVien/Details/@item.thanh_vien_qh_id">@item.ten_thanh_vien</a><span>, </span>
                        }
                        else
                        {
                            <a href="#">@item.ten_thanh_vien</a><span>, </span>
                        }
                    </li>
                }
            </ul>
        </div>
    }

}
