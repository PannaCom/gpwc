@using gpw.helpers;
@{
    string thanh_vien = "";
    if (configs.getCookie("ten_thanh_vien") != "")
    {
        thanh_vien = configs.getCookie("ten_thanh_vien");
    }
}
@if (configs.getCookie("thanhvien_id") != "")
{
    <li>
        @Html.ActionLink(thanh_vien, "Details", "ThanhVien", routeValues: new { id = configs.getCookie("thanhvien_id") }, htmlAttributes: new { title = "Trang cá nhân",style="color:yellow;" })
    </li>
    <li><a href="/ThanhVien/DangXuat">Đăng xuất</a></li>
}
else
{
    <li>@Html.ActionLink("Tạo gia phả", "Create", "ThanhVien", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Đăng nhập", "Login", "ThanhVien", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
