@section scripts {
<script src="~/Content/sld/jquery.flexslider-min.js"></script>
    <script>
        if ($('.kf_agent_slider').length) {
            var owl = $(".kf_agent_slider");
            owl.owlCarousel({
                autoPlay: 3000, //Set AutoPlay to 3 seconds
                itemsCustom: [
                  [0, 1],
                  [450, 1],
                  [600, 1],
                  [700, 2],
                  [1000, 3],
                  [1200, 4],
                  [1400, 4],
                  [1600, 4]
                ],
                navigation: true

            });
        }


        $(document).ready(function ($) {
            $('#example5').sliderPro({
                width: 565,
                height: 445,
                orientation: 'vertical',
                loop: false,
                arrows: true,
                buttons: false,
                thumbnailsPosition: 'left',
                thumbnailPointer: true,
                thumbnailWidth: 220,
                breakpoints: {
                    800: {
                        thumbnailsPosition: 'bottom',
                        thumbnailWidth: 270,
                        thumbnailHeight: 100
                    },
                    500: {
                        thumbnailsPosition: 'bottom',
                        thumbnailWidth: 120,
                        thumbnailHeight: 50
                    }
                }
            });
        });

        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: true,
                draggable: false,
            });
        });

    </script>
}
