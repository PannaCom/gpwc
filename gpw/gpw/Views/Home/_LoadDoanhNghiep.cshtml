@model List<gpw.Models.business>

<div class="newshot">
    <!--Our Agent Warp Start-->
    <section class="kf_our_agent_bg box_giapha panel">
        <!--Heading Wrap Start-->
        <div class="kf_heading_1 panel-heading">
            <h3>Doanh nghiệp các dòng họ</h3>

        </div>
        <!--Heading Wrap End-->
        <!--Agent List Wrap Start-->
        <div class="panel-body">
            <div class="kf_agent_slider owl-carousel owl-theme">
                @if (Model != null)
                {
                    if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="item">
                                <div class="kf_agent_wrap">
                                    <a href="@item.website" target="_blank" style="width: 265px; text-align: center;" title="Công ty cổ phần HimLam">
                                        <figure>
                                            <img src="@item.image" alt="@item.name" style="width: 100%;height: 100px;" title="Công ty cổ phần HimLam">
                                            <figcaption>
                                                <span class="kf_listing_overlay">@item.name</span>
                                            </figcaption>
                                        </figure>

                                    </a>
                                </div>
                            </div>
                        }
                    }
                }
                
            </div>
        </div>
        <!--Agent List Wrap End-->
    </section>
    <!--Our Agent Warp End-->
</div>
