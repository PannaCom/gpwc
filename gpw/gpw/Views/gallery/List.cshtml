@model PagedList.IPagedList<gpw.Models.gallery>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Thiết Kế Gia Phả Dòng Họ - Mẫu phả đồ - Sổ gia phả, tổ tiên, dòng tộc - Phả hệ - Cây gia phả - Mẫu gia phả dòng họ đẹp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="background: #fff;">
    <div class="page-header">
        <h1 class="text-center" style="color: red;">Mẫu gia phả</h1>
    </div>
</div>

<div class="row" style="background: #fff;">
    <div class="col-md-12">
        <h3 class="text-center" style="color: red;">Xem danh sách mẫu gia phả dòng họ đẹp dưới đây và đặt hàng chúng tôi liên hệ 097 977 6427</h3>
        <div id="gallery_giapha">

            @if (Model != null)
            {
                foreach (var item in @Model)
                {
                    string image2 = item.image.Replace(".jpg", "_2.jpg");
                    <div class="col-sm-6 col-md-3">
                        <a href="@item.image" class="thumbnail item_maugiapha">
                            <img src="@image2" alt="@item.name" class="img_show">
                            <div class="caption">
                                <h3>@item.name</h3>
                            </div>
                        </a>
                    </div>
                }
            }

        </div>

    </div>
</div>