            return;
        }
        if (semail == "") {
            alert("Nhập email của bạn");
            document.getElementById("email").focus();
            return;
        }
        if (sname == "") {
            alert("Nhập họ tên (và địa chỉ của bạn để chúng tôi gửi gia phả)");
            document.getElementById("name").focus();
            return;
