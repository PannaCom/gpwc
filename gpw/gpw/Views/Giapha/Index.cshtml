
@{
    ViewBag.Title = "Tạo gia phả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row section_1" style="background: #fff;">
    <div class="col-md-12">
        <div class="page-header">
            <h2>@ViewBag.Title.</h2>
        </div>
    </div>
</div>


<div class="row section_1" style="background: #fff;">
    <div class="col-md-4">
       
        <div class="form-horizontal" style="margin: 0 10px;">
            <div class="form-group">
                <div class="col-md-12">
                    <input type="text" name="tenthanhvien" id="tenthanhvien" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <select class="form-control">
                        <option>Quan hệ</option>
                        <option value="1">Cha mẹ - con</option>
                        <option value="2">Vợ - chồng</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button class="btn btn-default">Thêm</button>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-8">

        <div id="demo">
            <h1>{{title}}</h1>
            <vue-tree option="option"></vue-tree>
        </div>

    </div>
    
</div>



@section scripts {
    
<script src="~/Scripts/vuejs/vue.min.js"></script>    
<script src="~/Scripts/vuejs/src/tree.vue.js"></script>
<script src="~/Scripts/vuejs/demo/demo.js"></script>



    
}